{% extends 'base.html.twig' %}

{% block categoryActive %}active{% endblock %}

{% block body %}
	<div class="container-dynamic-block">

		<h1 class="display-6 container-dynamic-block-title">Les catégories
			<small class=" container-dynamic-block-button-add">
				<a href="{{path('app_category_new')}}">
					<i class="bi bi-patch-plus-fill"></i>
				</small>
			</a>
		</h1>

		<table class="table table-hover table-list ">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.name }}</td>
						<td>
							<a href="{{ path('app_category_edit', {'id': category.id}) }}">
								<i class="bi bi-pencil-square me-2 icon"></i>
							</a>
						</td>
						<td>
							{{ include('category/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucune categorie trouvée! Vous pouvez en ajouter</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	{% endblock %}
