{% extends 'base.html.twig' %}

{% block technicalActive %}active{% endblock %}


{% block body %}
	<div class="container-dynamic-block">

		<h1 class="display-6 container-dynamic-block-title">Les techniques
			<small class=" container-dynamic-block-button-add">
				<a href="{{path('app_technical_new')}}">
					<i class="bi bi-patch-plus-fill"></i>
				</small>
			</a>
		</h1>

		<table class="table table-hover table-list ">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for technical in technicals %}
					<tr>
						<td>{{ technical.id }}</td>
						<td>{{ technical.name }}</td>
						<td>
							<a href="{{ path('app_technical_edit', {'id': technical.id}) }}">
								<i class="bi bi-pencil-square me-2 icon"></i>
							</a>
						</td>
						<td>
							{{ include('technical/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucun ingrédient trouvé! Vous pouvez en ajouter</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endblock %}
