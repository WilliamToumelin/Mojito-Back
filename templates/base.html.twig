									<a class="nav-link {% block unitActive %}{% endblock %}" href="{{path ('app_unit_index')}}">Unités</a>
								</li>
								<li class="nav-item">
									<a class="nav-link {% block glassActive %}{% endblock %}" href="{{path ('app_glass_index')}}">Verres</a>
								</li>
								<li class="nav-item">
									<a class="nav-link {% block iceActive %}{% endblock %}" href="{{path ('app_ice_index')}}">Glaçons</a>
								</li>
								<li class="nav-item">
									<a class="nav-link {% block userActive %}{% endblock %}" href="{{path ('app_user_index')}}">
										Membres</a>
								</li>
								<li class="nav-item">
									<a class="nav-link {% block commentActive %}{% endblock %}" href="{{path ('app_comment_index')}}">
										Commentaires</a>
								</li>
								<li class="nav-item">
									<a class="nav-link {% block propositionCocktailActive %}{% endblock %}" href="{{path ('app_cocktail_proposition_index')}}">
										Les propositions</a>
								</li>
							</ul>
							<div>
								<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
									<li class="nav-item dropdown">
										<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
											<span>Bonjour
												{% if app.user.firstname %}
													{{app.user.firstname}}
											{% else %}
												{{app.user.pseudonym}}</span>
												{% endif %}
											<i class="bi bi-person-square"></i>
										</a>
										<ul class="dropdown-menu">
											<li>
												<a class="dropdown-item" href="#">Bientôt ...</a>
											</li>
											<li>
												<hr class="dropdown-divider">
											</li>
											<li>
												<a class="dropdown-item" href="{{path ('app_security_logout')}}">Déconnexion</a>
											</li>
										</ul>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</nav>
			{% endif %}
			<div class="container-fluid d-flex  justify-content-end"></div>
		</div>
		{% block body %}{% endblock %}


		<footer class="footer">
			<p class="footer-content">
				Espace Admin | Mojit'o |
				<time datetime="2023">{{ 'now' | date('Y') }}</time>
			</p>
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
		<script src="{{asset('js/form.js')}}"></script>
