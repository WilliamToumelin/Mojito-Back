		name="author" content="DashboardKit">

		<!-- Favicon icon -->
		<link
		rel="icon" href="#" type="image/x-icon">

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;1,100&family=Lexend:wght@200;400&display=swap" rel="stylesheet">


		<!-- Bootstrap icons -->
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

