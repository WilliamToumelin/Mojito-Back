{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-dynamic-block">

		<h1 class="display-6 container-dynamic-block-title">Les ingrédients
			<small class=" container-dynamic-block-button-add">
				<a href="{{path('app_ingredient_new')}}">
					<i class="bi bi-file-plus"></i>
				</small>
			</a>
		</h1>

		<table class="table table-hover table-list ">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Type</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for ingredient in ingredients %}
					<tr>
						<td>{{ ingredient.id }}</td>
						<td>{{ ingredient.name }}</td>
						<td>{{ ingredient.typeingredient }}</td>
						<td>
							<a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">
								<i class="bi bi-pencil-square me-2 icon"></i>
							</a>
						</td>
						<td>
							{{ include('ingredient/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucun ingrédient trouvé! Vous pouvez en ajouter</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endblock %}
