{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
	<div class="container-dynamic-block">
<h1 class="display-6 container-dynamic-block-title">Espace Admin - Connexion</h1>

<div class="container-form">
{% if error %}
    <div class="form-error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    
    <form action="{{ path('app_security_login') }}" method="post">
    <div class="mb-3"> 
        <label class="form-label" for="username">Email:</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
    </div>

    <div class="mb-3">
        <label class="form-label" for="password">Mot de passe:</label>
        <input class="form-control" type="password" id="password" name="_password"/>
    </div>

        <input type="hidden" name="_target_path" value="/admin/cocktails"/>

        <button class="mt-2 btn btn-success" type="submit">Se connecter</button>
    </form>
</div>
</div>
{% endblock %}