{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-dynamic-block">

		<h1 class="display-6 container-dynamic-block-title">Les types d'ingrédient
			<small class=" container-dynamic-block-button-add">
				<a href="{{path('app_typeingredient_new')}}">
					<i class="bi bi-file-plus"></i>
				</small>
			</a>
		</h1>

		<table class="table table-hover table-list ">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for typeingredient in typeingredients %}
					<tr>
						<td>{{ typeingredient.id }}</td>
						<td>{{ typeingredient.name }}</td>
						<td>
							<a href="{{ path('app_typeingredient_edit', {'id': typeingredient.id}) }}">
								<i class="bi bi-pencil-square me-2 icon"></i>
							</a>
						</td>
						<td>
							{{ include('typeingredient/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucun type ingrédient trouvé! Vous pouvez en ajouter</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endblock %}
